# ============================================
# PredictBot - Bot Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ============================================
# X/Twitter API Credentials
# ============================================
# Get these from https://developer.twitter.com

# OAuth 2.0 Bearer Token (for reading tweets/stream)
X_BEARER_TOKEN=

# OAuth 1.0a credentials (for posting tweets)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# ============================================
# Grok API (xAI)
# ============================================
# Get this from https://x.ai

GROK_API_KEY=

# ============================================
# Bot Configuration
# ============================================

# Your bot's X username (without @)
BOT_USERNAME=marketmake67808

# Website URL for link previews (your Vercel deployment)
WEBSITE_URL=https://marketmaker-nine.vercel.app

# ============================================
# Plugin Configuration
# ============================================

# Which plugin to use (default: prediction-market)
BOT_PLUGIN=prediction-market

# Use sandbox mode (mock data) - set to false for production
PLUGIN_SANDBOX_MODE=true
